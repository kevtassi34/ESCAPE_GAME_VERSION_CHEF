<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20sp"
        android:text="ESCAPE GAME" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/enigme9_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="20dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:text="9ème enigme \n\n Ce que nous vous racontons, est peut être vrai ou faux."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/reponseEnigme9_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textAlignment="center"
            android:hint="Tapez ici votre réponse (1 chiffre)"            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/validerEnigme9_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/white"
            android:background="#000000"
            android:text="Valider"
            android:textAlignment="center"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/indice9_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/white"
            android:background="#000000"
            android:text="indice n°9"
            android:textAlignment="center"  />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nbindice9_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginRight="170dp"
            android:textColor="#000000"
            android:text="Nombre indice : "/>

        <Button
            android:id="@+id/retour_btn"
            android:layout_width = "75dp"
            android:layout_height = "65dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:background="@drawable/fleche_retour"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>